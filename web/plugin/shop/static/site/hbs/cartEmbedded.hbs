{{#if data.success }}
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-shopping-cart"></i> Ваш кошик порожній
    </button>
{{else}}
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-shopping-cart"></i>
        {{#if data.info.productCount }}
            {{data.info.productCount}}шт. у кошику
            <span class="caret"></span>
        {{else}}
            Ваш кошик порожній
        {{/if}}
    </button>
    {{#if data.info.productCount }}
    <ul class="dropdown-menu shop-cart-embedded-dropdown-menu" role="menu">
        <li>
            {{#gt data.info.productCount 3 }}
                <div class="cart-message text-left">
                    Відображаються 3 з {{data.info.productCount}}
                </div>
            {{/gt}}
            {{>plugin/shop/common/hbs/partials/cartProductList data }}
            {{>plugin/shop/common/hbs/partials/cartInfo data }}
        </li>
        <li class="open-cart-standalone"><strong><a href="/#!/shop/cart">Переглянути всі позиції</a></strong></li>
    </ul>
    {{/if}}
{{/if}}