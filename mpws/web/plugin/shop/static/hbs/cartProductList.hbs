<div class="shop-cart-productlist">
{{#each products }}
    <div class="wrapper">
        <a href="javascript://" class="shop-product-remove" data-action="shop:cart:embedded-item-remove" data-oid="{{ID}}">
            <i class="fa fa-trash-o"></i>
        </a>
        <div class="shop-product-image shop-product-image-main">
            <a href="/#shop/product/{{ID}}" class="link" title="{{OriginName}} - {{Name}}">
                <img src="{{Attributes.IMAGES.MAIN}}" onerror="this.src='{{Attributes.IMAGES.EMPTY}}'" class="image img-responsive" alt="{{OriginName}} - {{Name}}" title="{{OriginName}} - {{Name}}" />
            </a>
        </div>
        <div class="product-row">
            <span class="product-name"><a href="/#shop/product/{{ID}}" title="{{OriginName}} - {{Name}}">{{OriginName}} - {{Name}}</a></span>
            <span class="label label-warning product-price">{{Price}}<span class="moneyType">грн.</span></span>
            <span class="label label-default">x</span>
            <span class="label label-warning product-quantity">{{_quantity}}</span>
            <span class="label label-default">=</span>
            <span class="label label-success product-total">{{_total}}<span class="moneyType">грн.</span></span>
        </div>
    </div>
{{/each}}
</div>
<div class="cartInfo row">
    <div class="shopCartSubTotal col-md-12">
        <span class="value-prefix">Сума:</span>
        <span class="value">{{info.subTotal}}</span>
        <span class="value-suffix moneyType">грн.</span>
    </div>
</div>