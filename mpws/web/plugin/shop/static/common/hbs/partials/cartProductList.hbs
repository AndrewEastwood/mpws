<div class="shop-widget-productlist">
{{#each . }}
    <div class="wrapper">
        <a href="javascript://" class="shop-product-remove" data-action="plugin:shop:order:remove" data-id="{{ID}}">
            <i class="fa fa-trash-o"></i>
        </a>
        <div class="shop-product-image shop-product-image-main">
            <a href="/#shop/product/{{ID}}" class="link" title="{{OriginName}} - {{Name}}">
                <div class="image productimage noimage image_{{ID}}">
                    {{#if Attributes.IMAGES.MAIN}}
                    <div id="facebookG">
                        <div id="blockG_1" class="facebook_blockG"></div>
                        <div id="blockG_2" class="facebook_blockG"></div>
                        <div id="blockG_3" class="facebook_blockG"></div>
                    </div>
                    {{/if}}
                </div>
                {{#if Attributes.IMAGES.MAIN}}
                <script>
                (function() {
                    require(["default/js/plugin/image!{{Attributes.IMAGES.MAIN}}"], function(img){
                        img.title = "{{Name}}";
                        img.className = "image img-responsive";
                        $('.image_{{ID}}').removeClass('noimage').html($(img).clone());
                    });
                })();
                </script>
                {{/if}}
            </a>
        </div>
        <div class="product-row">
            <span class="product-name"><a href="/#shop/product/{{ID}}" title="{{OriginName}} - {{Name}}">{{OriginName}} - {{Name}}</a></span>
            <span class="label label-warning product-price">{{Price}}<span class="moneyType">грн.</span></span>
            <span class="label label-default">x</span>
            <input type="number" class="form-control quantity input-sm" min="1" data-id="{{ID}}" value="{{Quantity}}">
            <span class="label label-warning product-quantity">{{Quantity}}</span>
            <span class="label label-default">=</span>
            <span class="label label-success product-total">{{Total}}<span class="moneyType">грн.</span></span>
        </div>
    </div>
{{/each}}
</div>