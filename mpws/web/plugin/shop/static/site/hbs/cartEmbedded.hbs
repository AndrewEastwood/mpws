<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    <i class="fa fa-shopping-cart"></i>
        {{#if data.info.productCount }}
            {{data.info.productCount}}шт. у кошику
            <span class="caret"></span>
        {{else}}
            Ваш кошик порожній
        {{/if}}
</button>
{{#if data.info.productCount }}
<ul class="dropdown-menu shop-cart-embedded-dropdown-menu" role="menu">
    <li>
        <div class="shop-widget-productlist">
        {{#each_upto data.items 3 }}
            {{>plugin/shop/common/hbs/partials/cartProductItem . }}
        {{/each_upto}}
        </div>
        {{>plugin/shop/common/hbs/partials/cartInfo data }}
    </li>
    {{#gt data.info.productCount 3 }}
        <div class="cart-message text-left">
            Відображаються 3 з {{data.info.productCount}}
        </div>
    {{/gt}}
    <li class="divider"></li>
    <li><a href="/#shop/cart">Переглянути всі позиції</a></li>
</ul>
{{/if}}