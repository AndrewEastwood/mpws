<div class="col-md-12">
    {{#mpwsIsNotEmpty data }}
    <div class="well">
        <div class="actions">
            <a href="javascript://" data-action="plugin:shop:list_compare:clear" data-id="*">
                <i class="fa fa-trash-o"></i> {{lang.list_compare_link_clear}}
            </a>
        </div>
    </div>
    <div class="well">
        <table class="table table-condensed table-responsive table-hover">
            <tr>
                <td></td>
                {{#each data }}
                <td>
                    <div class="panel">
                        <a href="javascript://" class="shop-product-remove" data-action="plugin:shop:list_compare:remove" data-id="{{ID}}">
                            <i class="fa fa-trash-o"></i>
                        </a>
                        <a href="javascript://" class="shop-product-remove" data-action="plugin:shop:list_cart:add" data-id="{{ID}}">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                    </div>
                </td>
                {{/each}}
            </tr>
            <tr>
                <td><span class="label label-default">Фото</span></td>
                {{#each data }}
                <td>
                    <div class="shop-component shop-product-images">
                        <div class="shop-product-image shop-product-image-main">
                            <a href="/#shop/product/{{ID}}" class="link">
                                <img src="{{Attributes.IMAGES.MAIN}}" onerror="this.src='{{Attributes.IMAGES.EMPTY}}'" class="image img-responsive" alt="{{Name}}" title="{{Name}}" />
                            </a>
                        </div>
                    </div>
                </td>
                {{/each}}
            </tr>
            <tr>
                <td><span class="label label-default">Назва</span></td>
                {{#each data }}
                <td>{{OriginName}} - {{Name}}</td>
                {{/each}}
            </tr>
            <tr>
                <td><span class="label label-default">Виробник</span></td>
                {{#each data }}
                <td>{{OriginName}}</td>
                {{/each}}
            </tr>
            <tr>
                <td><span class="label label-default">Категорія</span></td>
                {{#each data }}
                <td>{{CategoryName}}</td>
                {{/each}}
            </tr>
            <tr>
                <td><span class="label label-default">Ціна</span></td>
                {{#each data }}
                <td><span class="label label-warning product-price">{{Price}}<span class="moneyType">грн.</span></span></td>
                {{/each}}
            </tr>
            <tr>
                <td><span class="label label-default">Опис</span></td>
                {{#each data }}
                <td>{{Description}}</td>
                {{/each}}
            </tr>
            <tr>
                <td><span class="label label-default">Характеристики</span></td>
                {{#each data }}
                <td>{{Description}}</td>
                {{/each}}
            </tr>
            {{#each productFeatues }}
            <tr>
                <td><span class="label label-default">{{ @key }}</span></td>
                {{#each this }}
                <td>
                    {{#if this }}
                        <i class="fa fa-check text-success"></i>
                    {{else}}
                        <i class="fa fa-minus text-danger"></i>
                    {{/if}}
                </td>
                {{/each}}
            </tr>
            {{/each}}
            <tr>
                <td><span class="label label-default">Додаткові зображення</span></td>
                {{#each data }}
                <td>{{Description}}</td>
                {{/each}}
            </tr>
            <tr>
                <td> </td>
                {{#each data }}
                <td>
                    <div class="panel">
                        <a href="javascript://" class="shop-product-remove" data-action="plugin:shop:list_compare:remove" data-id="{{ID}}">
                            <i class="fa fa-trash-o"></i>
                        </a>
                        <a href="javascript://" class="shop-product-remove" data-action="plugin:shop:list_cart:add" data-id="{{ID}}">
                            <i class="fa fa-shopping-cart"></i>
                        </a>
                    </div>
                </td>
                {{/each}}
            </tr>
        </table>
    </div>
    <div class="well">
        <div class="actions">
            <a href="javascript://" data-action="plugin:shop:list_compare:clear" data-id="*">
                <i class="fa fa-trash-o"></i> {{lang.list_compare_link_clear}}
            </a>
        </div>
    </div>
    {{else}}
    <div class="alert alert-warning">{{lang.list_compare_empty}}</div>
    {{/mpwsIsNotEmpty}}
</div>