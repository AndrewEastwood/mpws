<div class="panel-heading">
    <a href="{{bb_link instances.shop.urls.originCreate id=data.ID asRoot=true}}">
        <i class="fa fa-plus"></i>
    </a>
    {{lang.pluginMenu_Origins_Grid_Title}}
</div>
<div class="panel-body">
    <label>
        <input type="checkbox" id="show_removed" {{#if extras.withRemoved }}checked{{/if}}>
        Враховувати видалені
    </label>
    <div class="filter-list-origins">
        {{#each data}}
        <div class="checkbox">
            <label> <input type="checkbox" class="shop-filter-origin" id="{{ID}}">{{Name}}</label>
            {{{contextButton}}}
            {{#if HomePage}}
            <span class="pull-right">
                <em><small><span class="label-datecreated">{{DateCreated}}</span></small></em>
                <em><small><a href="{{HomePage}}" class="origin-homepage" target="_blank"><i class="fa fa-globe"></i></a></small></em>
            </span>
            {{/if}}
        </div>
        {{/each}}
    </div>
</div>