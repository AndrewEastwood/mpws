<div class="panel">
    <form class="form-horizontal">

        {{#if data.ID }}
        <input name="ID" type="hidden" value="{{data.ID}}">
        {{/if}}

        <fieldset>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="textinput">{{lang.popup_origin_section_details_filed_name}}</label>
          <div class="col-md-4">
            <input id="textinput" name="Name" type="text" placeholder="" class="form-control input-md" required="required" value="{{data.Name}}">
          </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="textarea">{{lang.popup_origin_section_details_filed_description}}</label>
          <div class="col-md-4">
            <textarea class="form-control" id="textarea" name="Description">{{data.Description}}</textarea>
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="textinput">{{lang.popup_origin_section_details_filed_url}}</label>
          <div class="col-md-4">
            <input id="textinput" name="HomePage" type="text" placeholder="" class="form-control input-md" required="required" value="{{data.HomePage}}">
          </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="selectbasic">{{lang.popup_origin_section_details_filed_status}}</label>
          <div class="col-md-4">
            <select id="selectbasic" name="Status" class="form-control">
              {{#each data.statuses }}
              <option value="{{this}}" {{#if_eq ../data.Status this}}selected{{/if_eq}}>{{mpwsGetValueByKey ../lang this "origin_field_status_"}}</option>
              {{/each}}
            </select>
          </div>
        </div>

        </fieldset>
    </form>
</div>