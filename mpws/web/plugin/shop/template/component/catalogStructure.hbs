<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Каталог <b class="caret"></b></a>
    <ul class="dropdown-menu">
        {{#each source.data }}
        <li>
            {{#compare childrenCount ">" 0 }}
            <a href="/#shop/catalog/{{ID}}">{{Name}}<i class="icon-caret-down"></i></a>
            <ul class="dropdown-menu">
                <ul>
                {{#each children }}
                    {{#compare childrenCount ">" 0 }}
                    <li>
                        <a href="/#shop/catalog/{{ID}}">{{Name}}<i class="icon-caret-right pull-right"></i></a>
                        <ul class="dropdown-menu">
                            <ul>
                            {{#each children }}
                                <li><a href="/#shop/catalog/{{ID}}">{{Name}}</a></li>
                            {{/each}}
                            </ul>
                        </ul>
                    </li>
                    {{else}}
                    <li><a href="/#shop/catalog/{{ID}}">{{Name}}</a></li>
                    {{/compare}}
                {{/each}}
                </ul>
            </ul>
            {{else}}
            <a href="/#shop/catalog/{{ID}}">{{Name}}</a>
            {{/compare}}
        </li>
        {{/each}}
    </ul>
</li>
<!--end nav-->