<li class="dropdown shop-dropdown-catalog">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Каталог <b class="caret"></b></a>
    <ul class="dropdown-menu">

    {{#each source.data }}
        {{#compare childrenCount ">" 0 }}
        <li class="dropdown-submenu">
            <a href="/#shop/catalog/{{ID}}">{{Name}}</a>
            <ul class="dropdown-menu">
            {{#each children }}
                {{#compare childrenCount ">" 0 }}
                <li class="dropdown-submenu">
                    <a href="/#shop/catalog/{{ID}}">{{Name}}</a>
                    <ul class="dropdown-menu">
                    {{#each children }}
                        <li><a href="/#shop/catalog/{{ID}}">{{Name}}</a></li>
                    {{/each}}
                    </ul>
                </li>
                {{else}}
                <li>
                    <a href="/#shop/catalog/{{ID}}">{{Name}}</a>
                </li>
                {{/compare}}
            {{/each}}
            </ul>
        </li>
        {{else}}
        <li>
            <a href="/#shop/catalog/{{ID}}">{{Name}}</a>
        </li>
        {{/compare}}
    {{/each}}

    </ul>
</li>
<!--end nav-->