<li class="component-shop-cart-embedded" id="component-shop-cart-embedded-id">
    {{#if_eq source.data.cart.total "0" }}
    <a href="#shop/cart">Кошик (0)</a>
    {{else}}
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Кошик ({{source.data.cart.productAmount}}) <b class="caret"></b></a>
    <ul class="dropdown-menu" role="menu">
        <li><a href="#shop/cart">Перейти до кошика</a></li>
        <li class="divider"></li>
        {{#each source.data.products}}
        <li>
            <div class="block block-cart-item">
                <span class="label label-product-name">
                    <a href="/#shop/product/{{ID}}" title="Перейти до {{{Name}}}">{{Name}}</a>
                </span>
                <span class="value value-product-price">{{Price}}</span>
                <span class="label label-mathsign">x</span>
                <span class="value value-product-amount">
                    <input type="text" value="{{Amount}}"/>
                </span>
                <span class="value value-product-total">{{Total}}</span>
                <i class="fa fa-trash-o" data-action="shop:cart:embedded-item-remove" data-oid="{{ID}}"></i>
            </div>
        </li>
        {{/each}}
        <li class="divider"></li>
        <li>
            <div class="spacer"></div>
            <div class="component component-cart-summary">
                <span class="label label-cart-total">Загальна сума</span>
                <span class="value value-cart-total">{{source.data.cart.total}}</span>
            </div>
            <div class="spacer"></div>
            <div class="component component-buttons">
                <button type="button" class="btn btn-xs button-cart-clear" data-action="shop:cart:embedded-clear">
                    Очистити кошик
                </button>
                <button type="button" class="btn btn-xs btn-primary button-clear" data-action="shop:cart:checkout">
                    Оформити замовлення
                </button>
            </div>
        </li>
    </ul>
    {{/if_eq}}
</li>