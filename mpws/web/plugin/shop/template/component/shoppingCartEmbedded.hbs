<li class="shop-component shop-component-cart shop-component-cart-embedded" id="component-shop-cart-embedded-id">
    {{#if_eq source.data.cart.total "0" }}
    <a href="#shop/cart">Кошик (0)</a>
    {{else}}
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Кошик ({{source.data.cart.productAmount}}) <b class="caret"></b></a>
    <ul class="dropdown-menu" role="menu">
        <li><a href="#shop/cart">Перейти до кошика</a></li>
        <li class="divider"></li>
        <li>

            <table class="table table-striped table-cart-products">
            {{#each source.data.products}}
                <tr class="block block-cart-item">
                    <td>
                        <span class="label label-product-name">
                            <a href="/#shop/product/{{ID}}" class="link" title="Перейти до {{{Name}}}">{{Name}}</a>
                        </span>
                    </td>
                    <td>
                        <span class="value value-product-price">{{Price}} x</span>
                    </td>
                    <td>
                        <span class="value value-product-amount">{{CartAmount}}</span>
                    </td>
                    <td>
                        <span class="value value-product-total">{{CartTotal}}</span>
                    </td>
                    <td>
                        <i class="fa fa-trash-o" data-action="shop:cart:standalone-item-remove" data-oid="{{ID}}"></i>
                    </td>
                </tr>
            {{/each}}
                <tr class="block block-cart-item success">
                    <td colspan="3">
                        <span class="label label-cart-total">Знижка:</span>
                    </td>
                    <td>
                        <span class="value value-cart-total">{{source.data.cart.discount}}</span>
                    </td>
                    <td></td>
                </tr>
                <tr class="block block-cart-item warning">
                    <td colspan="3">
                        <span class="label label-cart-total">Загальна сума:</span>
                    </td>
                    <td>
                        <span class="value value-cart-total">{{source.data.cart.total}}</span>
                    </td>
                    <td></td>
                </tr>
            </table>
        </li>
    </ul>
    {{/if_eq}}
</li>