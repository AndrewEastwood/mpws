<div class="shop-component shop-product-view-standalone">
    <div class="comntainer">

        <div class="row">
            <div class="col-md-12">
                <div class="product-name">
                    <h3>{{source.data.OriginName}} - {{source.data.Name}} ({{source.data.Model}})</h3>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-5">
                <div class="shop-component shop-product-images">
                    <div class="shop-product-image shop-product-image-main">
                        <a href="{{source.data.ProductAttributes.IMAGES.MAIN}}" class="link" data-lightbox="shop-product-image-main">
                            <img src="{{source.data.ProductAttributes.IMAGES.MAIN}}" class="image img-responsive" data-toggle="magnify" alt="{{source.data.Name}}" title="{{source.data.Name}}" />
                        </a>
                    </div>
                    {{#if source.data.ProductAttributes.IMAGES.ADDITIONAL}}
                    <div class="shop-product-image shop-product-image-additional">
                        <h4>Додаткові зображення:</h4>
                        <div class="row">
                            {{#each source.data.ProductAttributes.IMAGES.ADDITIONAL}}
                            <div class="col-xs-3 col-md-2 shop-product-image-additional-entry">
                                <a href="{{this}}" class="link" data-lightbox="shop-product-image-additional">
                                    <img src="{{this}}" class="image img-responsive" alt="{{source.data.Name}}" title="{{source.data.Name}}" />
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    {{/if}}
                </div>
            </div>

            <div class="col-md-7">
                <ul class="list-group">

                    <li class="list-group-item">
                        <table class="shop-component table-responsive shop-product-attributes">
                            <tr class="shop-product-availability shop-product-availability-in-stock">
                                <td class="label">Цей товар:<td>
                                <td class="value">
                                    {{#compare source.data.Status "==" "AVAILABLE"}}
                                    <span class="label label-success">є в наявності</span>
                                    {{else}}
                                    <span class="label label-warning">немає в наявності</span>
                                    {{/compare}}
                                <td>
                            </tr>
                            <tr class="shop-product-origin">
                                <td class="label">Виробник:<td>
                                <td class="value">{{source.data.OriginName}}<td>
                            </tr>
                            <tr class="shop-product-model">
                                <td class="label">Модель:<td>
                                <td class="value">{{source.data.Model}}<td>
                            </tr>
                            <tr class="shop-product-code">
                                <td class="label">Код товару:<td>
                                <td class="value">#{{source.data.ID}}<td>
                            </tr>
                            <tr class="shop-product-price">
                                <td class="label">Ціна:<td>
                                <td class="value">{{source.data.Price}}<td>
                            </tr>
                        </table>
                    </li>

                    <li class="list-group-item">
                        <div class="shop-product-description-short">{{source.data.Description}}</div>
                    </li>

                    <li class="list-group-item">
                        <div class="shop-component shop-product-buttons-addto">
                            <button class="btn btn-primary btn-xs" data-action="shop:cart:add" data-oid="{{source.data.ID}}" data-title="+To Cart" data-placement="top" data-toggle="tooltip" data-original-title="" title="">
                                <i class="fa fa-shopping-cart"></i>
                            </button>
                            <button class="btn btn-xs" data-action="shop:wishlist:add" data-oid="{{source.data.ID}}" data-title="+To WishList" data-placement="top" data-toggle="tooltip" data-original-title="" title="">
                                <i class="fa fa-heart"></i>
                            </button>
                            <button class="btn btn-xs" data-action="shop:compare:add" data-oid="{{source.data.ID}}" data-title="+To Compare" data-placement="top" data-toggle="tooltip" data-original-title="" title="">
                                <i class="fa fa-files-o"></i>
                            </button>
                        </div>
                    </li>

                    <li class="list-group-item">
                        <div class="shop-product-social"></div>
                    </li>
                    
                    <li class="list-group-item">
                        <div class="shop-component shop-product-tabs">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#shop-product-overview-genereal-ID" data-toggle="tab">Опис</a></li>
                                <li><a href="#shop-product-overview-technical" data-toggle="tab">Характеристики</a></li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane active" id="shop-product-overview-genereal-ID">
                                    <p>{{source.data.Description}}</p>
                                </div>
                                <div class="tab-pane" id="shop-product-overview-technical-ID">
                                    <p>{{source.data.Description}}</p>
                                </div>
                            </div>
                        </div>
                    </li>

                </ul>

            </div>
        </div>

        <div class="row">

            <div class="col-md-12">
                <div class="ma-upsellslider-container">
                    <div class="ma-upsellslider-title">
                        <h4>Також рекомендуємо:</h4>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>