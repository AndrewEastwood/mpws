<div class="container user-account-create" id="wrap">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <form accept-charset="utf-8" class="form" role="form">
                <legend>Реєстрація</legend>
                <div class="row">
                    <div class="col-xs-6 col-md-6">
                        <input type="text" name="firstname" value="" class="form-control input-lg" placeholder="Імя" required />
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <input type="text" name="lastname" value="" class="form-control input-lg" placeholder="Прізвище" required />
                    </div>
                </div>
                <input type="email" name="email" value="" class="form-control input-lg" placeholder="Ел. адреса" required />
                <input type="password" name="password" value="" class="form-control input-lg" placeholder="Пароль" required />
                <input type="password" name="confirm_password" value="" class="form-control input-lg" placeholder="Підтвердження паролю" required />
                <span class="help-block">
                    By clicking Create my account, you agree to our Terms and that you have read our Data Use Policy, including our Cookie Use.
                </span>
                <button class="btn btn-lg btn-primary btn-block signup-btn" type="submit">Сворити профіль</button>
            </form>
        </div>
    </div>
</div>