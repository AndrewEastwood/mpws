<div class="well account-profile-password">
    <h3>{{lang.profile_page_password_title}}</h3>
    <form class="form-horizontal">
        <fieldset>

            <!-- Button Drop Down -->
            <div class="form-group">
                <label class="col-md-3 control-label" for="Password">{{lang.profile_page_password_field_Password}}</label>
                <div class="col-md-6">
                    <div class="input-group">
                        <input id="Password" name="Password" type="password" class="form-control" placeholder="{{lang.profile_page_password_field_Password_placeholder}}" type="text">
                        <div class="input-group-btn">
                            <button id="account-password-pwdgen-btn-ID" type="button" class="btn btn-default">{{lang.profile_page_password_button_generate}}</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Password input-->
            <div class="form-group">
                <label class="col-md-3 control-label" for="Verify">{{lang.profile_page_password_field_ConfirmPassword}}</label>
                <div class="col-md-6">
                    <input id="Verify" name="Verify" type="password" placeholder="{{lang.profile_page_password_field_ConfirmPassword_placeholder}}" class="form-control input-md" required="">
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-3 control-label" for="singlebutton"></label>
                <div class="col-md-6">
                    <button id="singlebutton" name="singlebutton" class="btn btn-primary">{{lang.profile_page_password_button_save}}</button>
                </div>
            </div>

        </fieldset>
    </form>

</div>