<!-- Single button -->
<a href="{{bb_link instances.system.urls.customerEdit id=data.ID asRoot=true}}">
    <i class="fa fa-pencil fa-fw"></i>
</a>
{{#unless data.isBlocked}}
<a href="javascript://" class="js-customer-remove" data-id="{{data.ID}}">
    <i class="fa fa-trash-o fa-fw text-danger"></i>
</a>
{{else}}
<a href="javascript://" class="js-customer-restore" data-id="{{data.ID}}">
    <i class="fa fa-undo fa-fw text-warning"></i>
</a>
{{/unless}}