<div class="panel">
    <form class="form-horizontal">
        {{#mpwsIsNotEmpty data.errors }}
        <div id="msg" class="alert alert-danger">
            {{lang.editors.user.errors.title}}
            <ol class="errors">
                {{#each data.errors}}
                {{#each this}}
                <li>{{mpwsGetValueByKey ../../lang.editors.user.errors key=this prefix=""}}</li>
                {{/each}}
                {{/each}}
            </ol>
        </div>
        {{/mpwsIsNotEmpty}}
        <fieldset>
            
            <!-- Textarea -->
            {{#if data.ID}}
            <div class="form-group">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-6">
                    <i class="fa fa-fw fa-circle {{#if data.IsOnline}}text-success{{else}}text-muted{{/if}}"></i>
                    {{lang.editors.user.labelIsOnline}}
                </div>
            </div>
            {{/if}}
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">{{lang.editors.user.labelFirstName}}</label>
                <div class="col-md-6">
                    <input type="text" class="form-control input-md js-firstname" value="{{data.FirstName}}">
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label">{{lang.editors.user.labelLastName}}</label>
                <div class="col-md-6">
                    <input type="text" class="form-control input-md js-lastname" value="{{data.LastName}}">
                </div>
            </div>
            <!-- Textarea -->
            <div class="form-group">
                <label class="col-md-4 control-label">{{lang.editors.user.labelEMail}}</label>
                <div class="col-md-6">
                    <input type="text" class="form-control input-md js-email" value="{{data.EMail}}">
                </div>
            </div>
            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-4 control-label" for="parent">{{lang.editors.user.labelPhone}}</label>
                <div class="col-md-6">
                    <input type="text" class="form-control input-md js-phone" value="{{data.Phone}}">
                </div>
            </div>
            <!-- Textarea -->
            {{#if data.ValidationString}}
            <div class="form-group">
                <label class="col-md-4 control-label">{{lang.editors.user.labelValidationString}}</label>
                <div class="col-md-6">
                    <input class="form-control input-md" value="{{data.ValidationString}}" readonly>
                </div>
            </div>
            {{/if}}
            <!-- User passwords -->
            <div class="form-group hidden">
                <label class="col-md-4 control-label">{{lang.editors.user.labelPassword}}</label>
                <div class="col-md-6">
                    <input class="form-control input-md js-password" value="">
                </div>
            </div>
            <div class="form-group hidden">
                <label class="col-md-4 control-label">{{lang.editors.user.labelPasswordVerify}}</label>
                <div class="col-md-6">
                    <input class="form-control input-md js-passwordverify" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">{{lang.editors.user.permissions.title}}</label>
                <div class="col-md-6 js-permissions permissions-list">
                    <div class="list-group">
                    {{#each data}}
                    {{#srtStartsWith @key 'p_Can'}}
                        <a href="javascript://" class="list-group-item shop-property-{{@key}}" data-property="{{@key}}">
                            <input type="checkbox" class="switcher pull-right js-{{@key}}"{{#if this}}checked{{/if}}>
                            <span class="property-label">{{mpwsGetValueByKey ../../lang.editors.user key=@key prefix='label' }}</span>
                        </a>
                    {{/srtStartsWith}}
                    {{/each}}
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>