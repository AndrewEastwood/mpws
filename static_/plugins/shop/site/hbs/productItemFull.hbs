<section id="single-product">
<div class="container">

     <div class="no-margin col-xs-12 col-sm-6 col-md-5 gallery-holder">
        <div class="product-item-holder size-big single-product-gallery small-gallery">
            <div id="owl-single-product" class="owl-carousel owl-theme">
                <div class="single-product-gallery-item" id="slide3">
                    <a data-rel="prettyphoto" href="images/products/product-gallery-01.jpg">
                        <img class="img-responsive" alt="" src="assets/images/products/product-gallery-01.jpg">
                    </a>
                </div><!-- /.single-product-gallery-item -->
            </div><!-- /.single-product-slider -->
            {{#gt data.Images.length 1}}
            <div class="single-product-gallery-thumbs gallery-thumbs">
                <div id="owl-single-product-thumbnails" class="owl-carousel owl-theme">
                    {{#each data.Images}}
                    <a class="horizontal-thumb active" data-target="#owl-single-product" data-slide="0" href="{{normal}}" data-lightbox="shop-product-image-additional">
                        <img width="67" src="{{app.location.homepage}}{{xs}}" class="image img-responsive" alt="{{data.Name}}" title="{{data.Name}}" />
                    </a>
                    {{/each}}
                </div><!-- /#owl-single-product-thumbnails -->
                <div class="nav-holder left hidden-xs">
                    <a class="prev-btn slider-prev" data-target="#owl-single-product-thumbnails" href="#prev"></a>
                </div><!-- /.nav-holder -->
                <div class="nav-holder right hidden-xs">
                    <a class="next-btn slider-next" data-target="#owl-single-product-thumbnails" href="#next"></a>
                </div><!-- /.nav-holder -->
            </div><!-- /.gallery-thumbs -->
            {{/gt}}
        </div><!-- /.single-product-gallery -->
    </div><!-- /.gallery-holder -->

    <div class="no-margin col-xs-12 col-sm-7 body-holder">
        <div class="body">

            <div class="availability" itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                <link itemprop="itemCondition" href="http://schema.org/NewCondition" />
                <label>Наявність:</label>
                {{#if data._archived}}
                    <link itemprop="availability" href="http://schema.org/OutOfStock" content="архівний"/>
                    <strong class="not-available">  архівний</strong>
                {{else}}
                    {{#if data._available }}
                    <link itemprop="availability" href="http://schema.org/InStock" content="в наявності"/>
                    <strong class="available">  є в наявності</strong>
                    {{else}}
                    <link itemprop="availability" href="http://schema.org/OutOfStock" content="немає в наявності"/>
                    <strong class="not-available">  немає</strong>
                    {{/if}}
                {{/if}}
            </div>

            <span class="title" itemprop="name">
                <a itemprop="url" title="{{data._displayName}}" href="{{bb_link instances.shop.urls.shopProduct product=data.ExternalKey asRoot=true fullUrl=true}}">{{data._displayName}}</a>
            </span>

            <div class="product-brand-and-id">
                <span itemprop="brand" itemscope itemtype="http://schema.org/Brand" class="brand">
                    <span itemprop="name">{{data._origin.Name}}</span>
                </span>
                <span class="product-meta-id pull-right">
                    Код товару: #<strong itemprop="productID" content="{{data.ID}}">{{data.ID}}</strong>
                </span>
            </div>

            <div class="social-row">
                <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=uaclientssupport" async="async"></script>
                <div class="addthis_native_toolbox"></div>
            </div>

            <div class="buttons-holder">
                <a class="btn-add-to-wishlist add-to-wishlist{{#if data._viewExtras.InWish }} added{{/if}}" href="javascript://">до списку</a>
                <a class="btn-add-to-compare add-to-compare{{#if data._viewExtras.InCompare }} added{{/if}}" href="javascript://">порівняти</a>
            </div>

            <div class="excerpt">
                <p>{{data.Synopsis}}</p>
            </div>
            
            <div class="prices">
                {{#each data._prices.others}}
                    <span itemprop="offers" itemscope itemtype="http://schema.org/Offer">
                        <meta itemprop="priceCurrency" content="{{@key}}" />
                        <span itemprop="price" content="{{this}}" class="price-current moneyValue {{@key}}{{#isnt ../instances.shop.settings._user.activeCurrency @key}} hidden{{/isnt}}">{{currency this currency=@key display=../instances.shop.settings.EXCHANAGERATESDISPLAY}}</span>
                    </span>
                {{/each}}
                {{#if data._promoIsApplied }}
                <div class="promocode label label-success">(Знижка: {{../data._promo.Discount}}%) | Ваш промокод <b>{{../data._promo.Code}}</b> діє до <b>{{../data._promo.DateExpire}}</b></div>
                {{/if}}
            </div>

            <div class="qnt-holder">
                <div class="le-quantity">
                    <a class="minus" href="#reduce"></a>
                    <input name="quantity" readonly="readonly" type="text" value="1">
                    <a class="plus" href="#add"></a>
                </div>
                <a href="javascript://" class="le-button huge add-to-cart">Додати в кошик</a>
            </div><!-- /.qnt-holder -->
        </div><!-- /.body -->
    </div><!-- /.body-holder -->
</div><!-- /.container -->
</section>

