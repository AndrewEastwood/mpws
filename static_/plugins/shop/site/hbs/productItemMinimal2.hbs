<div class="col-xs-4 col-sm-4 no-margin" itemscope itemtype="http://schema.org/Product">
    <link itemprop="url" href="{{bb_link instances.shop.urls.shopProduct product=data.ExternalKey asRoot=true fullUrl=true}}" />itemprop="name"
    <a title="{{data._displayNameFull}}" href="{{bb_link instances.shop.urls.shopProduct product=data.ExternalKey}}" class="thumb-holder link">
        {{#if data.Images.[0].micro}}
        <img src="{{appConfig.app.baseStaticUrl}}/img/blank.gif" alt="{{data._displayNameFull}}" data-echo="{{data.Images.[0].micro}}" class="image img-responsive">
        {{else}}
        <div class="shop-no-product-image"></div>
        {{/if}}
    </a>
</div>
<div class="col-xs-8 col-sm-8 no-margin">
    <a itemprop="url" title="{{data._displayNameFull}}" href="{{bb_link instances.shop.urls.shopProduct product=data.ExternalKey}}">{{data.Model}}</a>
    {{#each data._prices.others}}
        <div class="product-price {{@key}}{{#isnt ../instances.shop.settings._user.activeCurrency @key}} hidden{{/isnt}}">{{currency this currency=@key display=../instances.shop.settings.EXCHANAGERATESDISPLAY}}</div>
    {{/each}}
</div>